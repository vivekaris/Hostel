<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iotwebplanet.learn.hostel.Add_complaintActivity">

    <ImageView
        android:id="@+id/imageViewHostelProblem"
        android:padding="8sp"
        android:layout_width="@dimen/LayoutWidth368dp"
        android:layout_height="@dimen/LayoutHeightWardenMenu"
        app:srcCompat="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/student_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/Logo"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="9"

        android:gravity="start"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_num"
        app:layout_constraintBottom_toTopOf="@+id/hostel_name"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/room_num"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="15dp"
        android:ems="9"
        android:hint="Room Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/student_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHostelProblem"
        tools:layout_editor_absoluteY="113dp" />

    <EditText
        android:id="@+id/id_num"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"

        android:layout_marginTop="15dp"
        android:ems="9"

        android:hint="Student ID"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/student_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHostelProblem"
        tools:layout_editor_absoluteY="113dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="9"

        android:hint="Enter Description"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="383dp"
        app:layout_constraintTop_toBottomOf="@+id/problemtype"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/send_problem"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/problemtype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="9"

        android:hint="Enter Problem Type"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="285dp"
        app:layout_constraintTop_toBottomOf="@+id/mobile_num"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/description"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />


    <Spinner
        android:id="@+id/hostel_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toTopOf="@+id/mobile_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

    <EditText
        android:id="@+id/mobile_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        android:layout_marginStart="8dp"
        android:ems="9"
        android:hint="Enter Mobile Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/problemtype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostel_name"
        tools:layout_editor_absoluteY="239dp" />

    <Button
        android:id="@+id/send_problem"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="455dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
